.box-shadow {
   background-color: #fff;
   border-radius: 2px;
   box-shadow: 0px 0px 3px rgba(26,26,26,0.1);
}

.flex-between {
  display: flex;
  justify-content: space-between;
}

.flex-center {
  display flex
  flex-direction row
  align-items center
}

.user-info {
  display flex
  flex-direction row
  > .user-avater {
    border-radius 50%
    margin-right 10px
    width 50px
    height 50px
  }
  > .user-message {
    position relative
    :first-child{
      font-weight bold
    }
    > .more {
      font-size 12px
      position absolute
      bottom 0
    }
  }
}