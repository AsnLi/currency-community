@import './public'
.container {
    width: 90%;
    min-width: 1170px;
    margin 20px auto 100px auto
    > .content {
        > .main {
            padding: 20px 20px 70px 20px;
            > .main-header {
                @extend .flex-between
            }
        }
        > .sidebar {
            padding-left: 30px
            > .card {
                margin-top: 20px;
                padding 15px 15px 30px 15px;
                @extend .box-shadow
                > .card-header {
                     @extend .flex-between
                     > .card-more {
                         font-size 14px
                         color #99999c
                         cursor pointer
                     }
                }
                > .card-content {
                    margin-top 20px
                    margin-bottom 20px
                }
            }
        }
    }
}